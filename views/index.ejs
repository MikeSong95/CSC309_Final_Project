<!DOCTYPE html>
<html lang="en">
 <head>
    <meta charset="utf-8">
    <title>TITLE</title>
    <!-- JQuery -->
    <script type="text/javascript" src="./js/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="./css/bootstrap-css/bootstrap.min.css">
    <script type="text/javascript" src="./js/bootstrap-js/bootstrap.min.js"></script>
    <!-- Index CSS -->
    <link rel="stylesheet" type="text/css" href="./css/index.css">
 </head>
 <body>
    <div id="background">
        <img src="./resources/images/bg.jpg" class="stretch" alt="" />
    </div>

    <div class="wrapper fadeInDown">
        <div id="formContent">

            <!--Icon-->
            <img src="./resources/images/icons/logo-icon.png" id="icon" alt="User Icon" />
      
            <!-- Forms -->
            <form id="signInForm" method="GET" action="/login">
              <input type="text" name="email" id="login" placeholder="email" required>
              <input type="text" name="password" id="password" placeholder="password" required>
              <input type="submit" value="Log In">
          </form>
      
          <div>
            <% if (error) { %>
              <p id="error">Email or password incorrect</p>
            <% } %>
          </div>

          <!-- Forgot password -->
          <div id="formFooter">
            <a class="underlineHover" href="create-user">New User?</a>
          </div>
        </div>
  </div>
 </body>