<!DOCTYPE html>
<html lang="en">
 <head>
    <meta charset="utf-8">
    <title>TITLE</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">    <!-- Index CSS -->
    <link rel="stylesheet" type="text/css" href="./css/patient-dashboard.css">
 </head>
 <body>
    <div id="background">
        <img src="./resources/images/bg.jpg" class="stretch" alt="" />
    </div>
    <!-- Dashboard Navbar -->
    <nav class="navbar">
        <a class="navbar-brand" href="">
            <img class="navbar-logo" src="./resources/images/icons/logo-icon.png" alt="">
        </a>
        <ul class="d-flex justify-content-end align-items-center nav-icon">
            <li class="nav-item">
                <div class="btn-group">
                    <button onclick="openNotifications()" class="btn"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" type="button">
                        <img id="navbar-notif-icon" class="navbar-icon invert-color" src="./resources/images/icons/notification-none-icon.png">
                    </button>
                    <div id="notification-dropdown" class="dropdown-menu dropdown-menu-right">
                        <!-- Populate with notification information -->
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <div class="btn-group">
                    <button class="btn" onclick="bringToFront()" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" type="button">
                            <img class="navbar-icon" src="./resources/images/icons/stockprofile-icon.png">
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item roboto-light" href="patient-edit-profile">Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item roboto-light" href="logout">Log Out</a>
                        </div>
                </div>
            </li>
        </ul>
    </nav>
    <div id="dashboard">
        <div class="container d-flex justify-content-center align-items-center">
            <div class="card-deck">
                <div id="profile-card" class="card col-md">
                    <img src="./resources/images/mark.jpeg" class="profile-picture" alt="">
                    <div class="card-body">
                        <br>
                        <div id="user-name" class="center-text">
                        </div>
                        <hr>
                        <p>Assigned Doctors</p>
                        <div id="assigned-doctors">
                        </div>
                        <hr>
                        <p>Contact Info</p>
                        <div class="contact-info center-text">
                        
                        </div>
                    </div>
                </div>
                <div id="prescriptions-card" class="card col-md">
                    <h4 class="card-name">Medications</h4>
                    <div id="med-list" class="card-body">
                       
                    </div>
                </div>
                <div id="appointments-card" class="card col-md">
                    <h4 class="card-name">Appointments</h4>
                    <div id="appt-list" class="card-body">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <% include ./objects/users %> 
    <% include ./objects/medications %> 
    <% include ./objects/appointments %> 
    <% include ./objects/notifications %> 
    <% include ./renderers/patient-dashboard-renderer %> 
</body>